@{
    Layout = "_LayoutAuthorized";
}

<div>
    <div class="m-1">
        <div class="mb-1">
            <h4>Детали</h4>
            <p>Адрес: </p>
            <p>Время работы:</p>
        </div>
        <a class="button" href="#openModal">Добавить предмет</a>
        <a class="button" href="/Assortment/DeleteAll?fridgeId=@ViewBag.FridgeId">Удалить все продукты</a>

        <br>
        <table class="table_price">
            <colgroup>
                <col span="3">
                <col>
            </colgroup>
            <tr>
                <th>Наименование</th>
                <th>Количество</th>
            </tr>

            @foreach (Assortment p in ViewBag.Assortments)
            {
                <tr>
                    <td>@p.Name </td>
                    <td>@p.Quantity</td>
                    <td>
                    <th><a href="/Assortment/Delete?assortmentId=@p.Id">Удалить</a></th></td>
                </tr>
            }
        </table>
    </div>
</div>

<div id="openModal" class="modalDialog">
    <div>
        <a href="#close" title="Закрыть" class="close">X</a>
        <form method="post" action="#">
            <input type="hidden" value="@ViewBag.FridgeId" name="FridgeId" />
            <table>
                <tr>
                    <td><p>Выберите продукт</p></td>
                    <td>
                        <select name="products" id="products">
                           @* @foreach(Product p in ViewBag.Products)
                            {
                            <option value=@ViewBag.Products.Id>@ViewBag.Products.Name</option>
                                
                            }*@
                            <option value="volvo">Volvo</option>
                            <option value="saab">Saab</option>
                            <option value="opel">Opel</option>
                            <option value="audi">Audi</option>
                        </select>
                    </td>
                        @*<input type="text" name="Person" />*@ 
                </tr>
                <tr>
                    <td><p>Введите количество :</p></td>
                    <td><input type="text" name="Quantity" /> </td>
                </tr>
                <tr>
                    <td><input type="submit" value="Отправить" /> </td>
                    <td></td>
                </tr>
            </table>
        </form>
    </div>
</div>
