@{
    ViewBag.Title = "Index";
}

<div>
    <div class="m-1">
        <div class="mb-1">
            <h4>Детали</h4>
            <p>Адрес: </p>
            <p>Время работы:</p>
        </div>
        <a class="button" href="#openModal">Добавить предмет</a>
        <br>
        <table class="table_price">
            <colgroup>
                <col span="3">
                <col>
            </colgroup>
            <tr>
                <th>Наименование</th>
                <th>Цена, руб.</th>
            </tr>

            @foreach (Assortment p in ViewBag.Assortments)
            {
                <tr>
                    <td>@p. </td>
                    <td>@p.Quantity</td>
                    <td>
                    <th><a href="#">Удалить</a></th></td>
                </tr>
            }
        </table>
    </div>
</div>

<div id="openModal" class="modalDialog">
    <div>
        <a href="#close" title="Закрыть" class="close">X</a>
        <form method="post" action="/Shop/Create">
            <input type="hidden" value="@ViewBag.BookId" name="BookId" />
            <table>
                <tr>
                    <td><p>Введите свое имя </p></td>
                    <td><input type="text" name="Person" /> </td>
                </tr>
                <tr>
                    <td><p>Введите адрес :</p></td>
                    <td><input type="text" name="Address" /> </td>
                </tr>
                <tr>
                    <td><input type="submit" value="Отправить" /> </td>
                    <td></td>
                </tr>
            </table>
        </form>
    </div>
</div>
